<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.recruit.admin">
	<resultMap id="recruitResultMap" type="kr.co.sist.admin.domain.recruit.RecruitDomain">
	    <id property="id" column="recruit_num"/> 
	    <result property="company" column="company_name"/>
	    <result property="position" column="position_title"/>
	    <result property="title" column="title"/>
	    <result property="content" column="content"/>
	    <result property="peopleNum" column="people_num"/>
	    <result property="endDate" column="end_date"/>
	    <result property="hireCategory" column="employment_type"/>
	    <result property="workDay" column="work_day"/>
	    <result property="workTime" column="work_time"/>
	    <result property="workPlace" column="work_place"/>
	    <result property="salaryCategory" column="salary_category"/>
	    <result property="salary" column="salary"/>
	    <result property="careerStandard" column="career_condition"/>
	    <result property="careerStandardSum" column="years_"/>
	    <result property="eduStandard" column="edu_standard"/>
	</resultMap>
    <select id="selectRecruits" resultMap="recruitResultMap">
	  	select 
	  		recruit_num, r.company_code, ci.company_name, input_date, end_date, title
	  	, career_condition, years, employment_type, work_place
		from recruit r
		left join companyinfo ci on r.company_code = ci.company_code
    </select>
</mapper>